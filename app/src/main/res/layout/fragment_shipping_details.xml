<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShippingDetailsFragment"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/itemdetailslayout1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_Icon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/backarrow_icon"
                />

            <TextView
                android:id="@+id/txt_ItemID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey_text"
                android:text="Shipping Details"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemdetailslayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/itemdetailslayout1"
            >

            <ImageView
                android:id="@+id/img_itemShippingdetails"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemdetailslayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/itemdetailslayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Item ID"
                android:textStyle="bold"
                android:textColor="@color/grey_text"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/txt_ItemIDShippingDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Item ID"
                android:textColor="@color/grey_text"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemdetailslayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/itemdetailslayout3">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Receiver's Name"
                android:textStyle="bold"
                android:textColor="@color/grey_text"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/editTextReceiverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:ems="12"
                android:hint="Name"
                android:inputType="textCapWords" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemdetailslayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/itemdetailslayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Contact Number"
                android:textStyle="bold"
                android:textColor="@color/grey_text"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/editTextContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:ems="12"
                android:hint="+60-XX XXXXXXXX" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemdetailslayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/itemdetailslayout5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Address"
                android:textStyle="bold"
                android:textColor="@color/grey_text"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/editTextAddressr"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:ems="12"
                android:hint="Delivery Address"
                android:inputType="textLongMessage"
                android:gravity="top"
                android:padding="5dp"
                android:singleLine="false" />

            <Button
                android:id="@+id/btn_ShipItem2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Ship Item"
                android:textSize="17dp"
                android:layout_margin="30dp"
                app:backgroundTint="@color/button_colour"
                app:elevation="2dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/itemdetailslayout6"

                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>